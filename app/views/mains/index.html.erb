<div class="row">
<div class="col-md-8 col-md-offset-2">
<h1 style="text-align:center;">Welcome to the Concentration Game</h1>
<h3 style="text-align:center;">Rules: all cards are face down with symbols on them.  There are two of each symbol, match cards two at a time until you've matched them all.  Enjoy!</h3>
<div class="col-md-4"><p>Player 1 Score:<span id="player1">0</span></p></div>
<div class="col-md-4"><h3>It is: <span id="turn">player1</span>'s turn</h3></div>
<div class="col-md-4"><p>Player 2 Score:<span id="player2">0</span></p></div>
</div>
</div>


<script>
var number = -1;
  //keep prompting until the input matches parameters.  then initialize with that number
  while(number<2 || number>1024)
  {

    number = prompt("How many cards would you like? Must be an even integer greater than 2, less than 1024", "12");
    if(number%2!==0)
      number = -1;
    if(number ==null)
      number =12;
  }

  runGame(number,2)
</script>